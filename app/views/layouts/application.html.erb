<!DOCTYPE html>
<html>
<head>
  <title>Syntaxair</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <div class="navbar">
    <a href="/"><div class="icon"></div></a>
    <% if current_user %>
    <div class="login">
      <%= 'Welcome, ' + current_user[:email].to_s + "!" %>
      <%= button_to "Log out", "/users/new", method: :delete %>
    </div>
    <% else %>
    <div class="login">
      <%= form_for User.new, {url:"/authentications", method:"post"} do |u| %>
      <p>
        <%= u.text_field :email, placeholder: "email" %>
        <%= u.password_field :password, placeholder: "password" %>
        <%= button_to "login"%>
      </p>
      <% end %>
    </div>
  <% end %>
  </div>

  <div class="container">
    <div class="branding"></div>
  </div>




  <%= yield %>

</body>
</html>
