<%= form_for @user do |u| %>
  <br>
    <%= u.label :email, "Email" %><%=u.text_field :email %><br />
    <%= u.label :password, "Password" %><%=u.text_field :password, {type: 'password'} %><br />
    <%= u.label :password_confirmation, "Confirm" %><%=u.text_field :password_confirmation, {type: 'password'} %><br />
    <%= u.submit %><br />

    <% end %>